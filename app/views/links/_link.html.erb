<li id="link-<%= link.id %>"><!-- Single link info -->	
	<% if link.image_src == 'p-img-bg.jpg' %>
		<div class="link-preview-img-holder"></div>		
	<% else %>
		<div class="link-preview-img-holder" style="background:none;">
			<%= image_tag link.image_src, alt: "", width: "150" %>
		</div>
	<% end %>
	<div class="link-text-info">
	
		<div class="link-title">
			<i class="icon clip-i"></i>
			<span><%= link_to link.title, link_surf_path(link), target: "_blank" %></span>
		</div>
	
		<div class="link-note">
			<a href="#linkNotePopup" class="popup-trigger tip-bubble" data-link-id="<%= link.id %>" title="Edit Note">
				<i class="icon edit-i"></i></a>
			<span><%= link.notes %></span>
		</div>
		
		<div class="link-posted">
			<div class="link-author">
				<i class="icon user-i"></i>
				<span>Posted by: <%= link.creator_name %></span>
			</div>
			<div class="link-time">
				<i class="icon time-i"></i>
				<span><%= time_ago_in_words(link.created_at).titleize %> Ago</span>
			</div>
		</div>
		<%= link_to '', link_path(link), method: :delete, remote: true, class: "link-del", title: "Remove link" %>
	
	</div> <!-- All info except preview image -->

</li><!-- Single link info ends -->

