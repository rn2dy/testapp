<%= content_for :head do %>
	<!-- tipsy.js plugin -->
	<%= javascript_include_tag "plugins/tipsy/jquery.tipsy" %>
	<%= stylesheet_link_tag "./app/assets/javascripts/plugins/tipsy/tipsy" %>
	<script type="text/javascript">
		jQuery(document).ready(function(){
			$('.tip-bubble').tipsy({gravity: 's'});
		});
	</script>
	<!-- jScrollPanel.js plugin -->
	<%= javascript_include_tag "plugins/jScrollPane/jquery.jscrollpane.min" %>
	<%= stylesheet_link_tag "./app/assets/javascripts/plugins/jScrollPane/jquery.jscrollpane" %>
	<script type="text/javascript" id='sourcecode'>
		jQuery(document).ready(function(){
			$('.topic-links-list, .topic-comments-list').jScrollPane();
		});
	</script>
<% end %>

<% content_for :main do %>
	<div class="content-topic-main">
		<div class="topic-page-actions clearfix">
			<a href="#" class="content-btn" style="float: left"><i class="btn-icon back-i"></i> Back to topics </a>
			<a href="#" class="content-btn" style="margin-left: 10px;"><i class="btn-icon delete-i"></i> Leave Topic </a>
			<a href="#editTopicPopup" class="content-btn popup-trigger"><i class="btn-icon edit-i"></i> Edit Topic </a>
		</div><!-- Topic actions -->
		
		<div class="topic-main-holder clearfix">
		
			<div class="topic-main-header clearfix">
				<h2><i class="icon title-i"></i>Hotel to book for 2012 vacation</h2>
				<div class="count-invited" style="margin-top: 6px;">
					<a href="#inviteMore" class="invite-more popup-trigger">
						<i class="icon more-i tip-bubble" title="Invite more people"></i></a> <span>6</span> <i class="icon users-i"></i> </div> <!-- Invited friends counter -->
				<div class="topic-author"><i class="icon user-i"></i><span>Started by: Vinny</span></div>
			</div> <!-- Header of main topic info -->
		
			<div class="content-divider"></div>
			
			<div class="topic-add-link clearfix">
				<form>
					<input type="text" class="url-field" placeholder="Paste URL in this field" />
					<input type="submit" class="content-btn" value="Add to Topic" />
				</form>
			</div><!-- Add link to topic end -->
		
			<div class="content-divider"></div>
		
			<div class="topic-links-list">
				<ul>
					<li><!-- Single link info -->
						<div class="link-preview-img-holder"><%= image_tag "example-img.jpg", alt: ": (" %></div>
						
						<div class="link-text-info">
						
							<div class="link-title">
								<i class="icon clip-i"></i>
								<span><a href="#">Book a Better Hotel Room With Room 77</a></span>
							</div>
						
							<div class="link-note">
								<a href="#linkNotePopup" class="popup-trigger tip-bubble" title="Edit Note"><i class="icon edit-i"></i></a>
								<span>A cool article on Mashable.</span>
							</div>
							
							<div class="link-posted">
								<div class="link-author">
									<i class="icon user-i"></i>
									<span>Posted by: Vinny</span>
								</div>
								<div class="link-time">
									<i class="icon time-i"></i>
									<span>3 Hours Ago</span>
								</div>
							</div>
						
							<a href="#" class="link-del tip-bubble" title="Remove link" ></a>
					
						</div> <!-- All info except preview image -->
					
					</li><!-- Single link info ends -->
				</ul>
			</div><!-- Links list ends -->
		</div> <!-- Main topic info holder -->
	</div> <!-- Main contents of topic page -->
<% end %>

<% content_for :side do %>
	<div class="topic-comments">
		<div class="topic-comments-header">Topic Comments</div>
	
		<div class="content-divider"></div>
		
		<div class="topic-comments-list">
			<ul>
				<!-- Single Comment -->
				<li>
					<div class="comment-header">
						<b>Vinny</b>
						<span>3 Hours Ago</span>
					</div>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis </p>
				</li>
				<!-- Single Comment Ends -->
			</ul>
		</div> <!-- Comments list -->
		
		<div class="content-divider"></div>
		
		<form>
			<textarea placeholder="Write comment and press 'Enter' to submit"></textarea>
		</form><!-- Comment form end -->
	</div> <!-- Topic comments end -->
<% end %>

