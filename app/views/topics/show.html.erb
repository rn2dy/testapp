		        <form>
			        <div>
				        <label>Currently Invited (6)</label>
				        <ul class="currently-invited-list">
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
					        <li><i class="icon user-i"></i>adisdesigner@gmail.com</li>
				        </ul>
			        </div>
			        <div>
				        <label>Invite more friends to join you</label>
				        <textarea type="text" placeholder="Enter their emails and separate the addresses by commas. (like 'me@klipt.com, you@klipt.com') "></textarea>
			        </div>
			        <div class="content-divider"></div>
			        <div>
				        <input type="submit" class="pop-content-form-button" value="Invite" />
