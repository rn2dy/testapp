			        	<input type="submit" class="pop-content-form-button" value="Finish" />
			       		 <span class="error-message"><i class="icon error-i"></i> Fill all the fields and try again!</span>
			        </div>			        
		        </form>        
	        </div><!-- Pop content ends -->       
		</div>
	</div>

<% end %>






