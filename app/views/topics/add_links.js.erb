<% if @new_link.errors.any? %>
	$('input#url').val("");
	$('.topic-link-loading').hide();
	$('.topic-add-link form').show();
	$('input#url').attr('placeholder', 'Sorry, the link seems not accessible, try again.');
<% else %>
	$("<%= escape_javascript( render @new_link )%>").hide().prependTo('.topic-links-list ul').show('slow');
	$('input#url').val("");
	$('.topic-link-loading').hide();
	$('.topic-add-link form').show();
	$('input#url').attr('placeholder', 'Paste URL in this field');
	$('#url').blur();
	var api = $('.topic-links-list').data('jsp');
	api.reinitialise();
<% end %>
