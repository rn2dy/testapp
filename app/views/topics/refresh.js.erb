<% if @links %>
	$('.topic-links-list ul').html($("<%= escape_javascript( render @links )%>"));	
	$('#linkCreatedAt').text("<%= @topic.latest_link_date %>");
<% end %>

<% if @comments %>
	$('.topic-comments-list ul').html($("<%= escape_javascript(render partial: 'comment', collection: @comments) %>"));	
	$('#comtCreatedAt').text("<%= @topic.latest_comt_date %>");
<% end %>



<% if @new_links.count > 0 && @new_comments.count > 0 %>	
	<% @message = "Newly added: #{pluralize(@new_links.count, "link")} and #{pluralize(@new_comments.count, "comment")} to topic #{@topic.name}." %>	
<% elsif @new_links.count > 0 %>
	<% @message = "Newly added: #{pluralize(@new_links.count, "link")} to topic #{@topic.name}." %>
<% elsif @new_comments.count > 0 %>
	<% @message = "Newly added: #{pluralize(@new_comments.count, "comment")} to topic #{@topic.name}." %>
<% else %>
	<% @message = "" %>
<% end %>

<% unless @message.empty? %>
	$('#notification').text("<%= @message %>").toggle('slow').delay(5000).fadeOut('slow');
<% end %>
