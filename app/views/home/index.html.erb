<h2>Sign up now, it's FREE!'</h2>
<%= form_for resource, as: resource_name, url: user_registration_path do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>		
	</div>
	<div>
		<%= f.label :email %>
		<%= f.email_field :email %>		
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>		
	</div>
	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<div>
		<%= f.submit 'Sign Up' %>	
	</div>
<% end %>
