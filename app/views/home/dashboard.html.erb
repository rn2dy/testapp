<% if @topics.count == 0 %>
	<div class="content-no-topics clearfix">
		<p>You're not involved in any topic.<br />
			Why wait? <b>Get started!</b></p>
		
		<div class="content-new-topic">
			<a href="#newTopicPopup" class="new-topic-btn"><i class="btn-icon new-topic-i"></i>New Topic</a>
		</div><!-- New Topic ends -->
		
		<small>Click the button and follow instructions.</small>
	</div><!-- No topics content ends -->
<% else %>
	<div class="content-topics-list">
		<% @topics.each_slice(4) do |sub_set| %>
			<div class="topics-list-row">
				<% sub_set.each do |topic| %>
					<!-- Single topic preview  -->
					<div class="topics-list-item">
						<div class="topics-list-item-holder">		
							<div>
								<h3><a href="topics/<%= topic.id %>">Restaurant Picks</a></h3> <!-- Topic title -->
								<div class="count-clips"><span>3 </span><i class="icon clip-i"></i></div> <!-- Clips counter -->
							</div>
							
							<div class="topic-preview-img-holder"></div><!-- Topic preview img holder -->
							
							<div>
								<div class="count-comments"><i class="icon comment-i"></i><span>27</span></div> <!-- Comments counter -->
								<div class="count-invited"><a href="#inviteMore" class="invite-more popup-trigger"><i class="icon more-i"></i></a> <span>6</span> <i class="icon users-i"></i> </div> <!-- Invited friends counter -->
							</div> 
						</div> <!-- Single topic preview holder ends -->
						<div class="topics-list-item-shadow"></div><!-- Shadow below the holder -->
					</div><!-- Single topic preview ends -->
				<% end %>
				<% if sub_set.count < 4 %>
					<!-- New Topic -->
					<div class="topics-list-item">
						<div class="content-new-topic">
							<a href="#newTopicPopup" class="new-topic-btn popup-trigger"><i class="btn-icon new-topic-i"></i>New Topic</a>
						</div>
					</div><!-- New Topic -->
				<% end %>
			</div><!-- One row ends -->
		<% end %>	
	</div>
<% end %>


